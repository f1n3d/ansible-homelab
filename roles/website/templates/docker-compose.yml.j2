# {{ ansible_managed }}
# Website (Nginx) Docker Compose

services:
  nginx:
    image: {{ website_image }}
    container_name: {{ website_container_name }}
    restart: unless-stopped
    user: "101:101"  # nginx:nginx in nginx:alpine
    ports:
      - "{{ website_port }}:80"
{% if contact_api_enabled | default(true) %}
    extra_hosts:
      - "host.docker.internal:host-gateway"
{% endif %}
    volumes:
      - {{ website_html_path }}:/usr/share/nginx/html:ro
      - {{ website_install_path }}/nginx.conf:/etc/nginx/conf.d/default.conf:ro
    security_opt:
      - no-new-privileges:true
    cap_drop:
      - ALL
    cap_add:
      - CHOWN
      - SETGID
      - SETUID
      - NET_BIND_SERVICE
    read_only: true
    tmpfs:
      - /var/cache/nginx:mode=1777,size=10M
      - /var/run:mode=1777,size=10M
      - /tmp:mode=1777,size=10M
    healthcheck:
      test: ["CMD-SHELL", "curl -fsS http://localhost:80/healthz > /dev/null || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s
    deploy:
      resources:
        limits:
          memory: 256M
          cpus: '0.5'
        reservations:
          memory: 64M
          cpus: '0.1'
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"
