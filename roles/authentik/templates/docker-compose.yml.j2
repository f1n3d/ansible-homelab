# {{ ansible_managed }}
# Authentik Identity Provider Docker Compose Configuration
# With PostgreSQL and Redis

services:
  postgresql:
    image: {{ authentik_postgres_image }}
    restart: unless-stopped
    stop_grace_period: 60s
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -d {{ authentik_postgres_db }} -U {{ authentik_postgres_user }}"]
      start_period: 20s
      interval: 30s
      retries: 5
      timeout: 5s
    volumes:
      - authentik_db_data:/var/lib/postgresql/data
    env_file: .env
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"

  redis:
    image: {{ authentik_redis_image }}
    restart: unless-stopped
    stop_grace_period: 30s
    command: --save 60 1 --loglevel warning
    healthcheck:
      test: ["CMD-SHELL", "redis-cli ping | grep PONG"]
      start_period: 20s
      interval: 30s
      retries: 5
      timeout: 3s
    volumes:
      - authentik_redis_data:/data
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"

  server:
    image: {{ authentik_image }}
    restart: unless-stopped
    command: server
    env_file: .env
    volumes:
      - authentik_media:/media
      - authentik_templates:/templates
    ports:
      - "{{ authentik_port }}:9000"
    depends_on:
      postgresql:
        condition: service_healthy
      redis:
        condition: service_healthy
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"

  worker:
    image: {{ authentik_image }}
    restart: unless-stopped
    command: worker
    env_file: .env
    user: root
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - authentik_media:/media
      - authentik_templates:/templates
    depends_on:
      postgresql:
        condition: service_healthy
      redis:
        condition: service_healthy
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"

volumes:
  authentik_db_data:
    external: true
  authentik_redis_data:
    external: true
  authentik_media:
    external: true
  authentik_templates:
    external: true
