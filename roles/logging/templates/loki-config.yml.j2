# =============================================================================
# Loki Configuration
# =============================================================================
# Auto-generated by Ansible - roles/logging
# Do not edit manually - changes will be overwritten

auth_enabled: false

server:
  http_listen_port: {{ loki_http_port }}
  grpc_listen_port: {{ loki_grpc_port }}
  log_level: {{ loki_log_level }}

common:
  path_prefix: /var/lib/loki
  storage:
    filesystem:
      chunks_directory: /var/lib/loki/chunks
      rules_directory: /var/lib/loki/rules
  replication_factor: 1
  ring:
    instance_addr: 127.0.0.1
    kvstore:
      store: inmemory

schema_config:
  configs:
    - from: 2024-01-01
      store: tsdb
      object_store: filesystem
      schema: v13
      index:
        prefix: index_
        period: 24h

storage_config:
  filesystem:
    directory: /var/lib/loki/chunks
  tsdb_shipper:
    active_index_directory: /var/lib/loki/index
    cache_location: /var/lib/loki/cache

limits_config:
  retention_period: {{ loki_retention_period }}
  reject_old_samples: true
  reject_old_samples_max_age: {{ loki_reject_old_samples_max_age }}
  ingestion_rate_mb: {{ loki_ingestion_rate_mb }}
  ingestion_burst_size_mb: {{ loki_ingestion_burst_size_mb }}
  per_stream_rate_limit: {{ loki_per_stream_rate_limit }}
  per_stream_rate_limit_burst: {{ loki_per_stream_rate_limit_burst }}
  max_entries_limit_per_query: {{ loki_max_entries_limit_per_query }}

compactor:
  working_directory: /var/lib/loki/compactor
  retention_enabled: {{ loki_retention_enabled | lower }}
  retention_delete_delay: {{ loki_retention_delete_delay }}
  retention_delete_worker_count: {{ loki_retention_delete_worker_count }}
  compaction_interval: 10m
  delete_request_store: filesystem

query_range:
  results_cache:
    cache:
      embedded_cache:
        enabled: true
        max_size_mb: 100

ruler:
  alertmanager_url: http://localhost:9093
  storage:
    type: local
    local:
      directory: /var/lib/loki/rules
  rule_path: /var/lib/loki/rules-temp
  ring:
    kvstore:
      store: inmemory
  enable_api: true

# Analytics disabled for privacy
analytics:
  reporting_enabled: false
