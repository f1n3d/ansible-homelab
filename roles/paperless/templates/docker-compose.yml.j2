# {{ ansible_managed }}
# Paperless-NGX Docker Compose Configuration
# With PostgreSQL, Redis, Tika & Gotenberg for Office document support

services:
  broker:
    image: {{ paperless_redis_image }}
    restart: unless-stopped
    stop_grace_period: 30s
    volumes:
      - paperless_redis_data:/data
    security_opt:
      - no-new-privileges:true
    deploy:
      resources:
        limits:
          memory: 256M
          cpus: '0.5'
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"

  db:
    image: {{ paperless_postgres_image }}
    restart: unless-stopped
    stop_grace_period: 60s
    volumes:
      - paperless_db_data:/var/lib/postgresql
    env_file: .env
    security_opt:
      - no-new-privileges:true
    deploy:
      resources:
        limits:
          memory: 512M
          cpus: '1.0'
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"

  webserver:
    image: {{ paperless_image }}
    restart: unless-stopped
    depends_on:
      - db
      - broker
      - gotenberg
      - tika
    ports:
      - "{{ paperless_port }}:8000"
    volumes:
      - paperless_data:/usr/src/paperless/data
      - paperless_media:/usr/src/paperless/media
      - {{ paperless_install_path }}/export:/usr/src/paperless/export
      - {{ paperless_install_path }}/consume:/usr/src/paperless/consume
    env_file: .env
    security_opt:
      - no-new-privileges:true
    deploy:
      resources:
        limits:
          memory: 2G
          cpus: '2.0'
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"

  gotenberg:
    image: {{ paperless_gotenberg_image }}
    restart: unless-stopped
    command:
      - "gotenberg"
      - "--chromium-disable-javascript=true"
      - "--chromium-allow-list=file:///tmp/.*"
    security_opt:
      - no-new-privileges:true
    deploy:
      resources:
        limits:
          memory: 512M
          cpus: '1.0'
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"

  tika:
    image: {{ paperless_tika_image }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    deploy:
      resources:
        limits:
          memory: 1G
          cpus: '1.0'
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"

volumes:
  paperless_data:
    external: true
  paperless_media:
    external: true
  paperless_db_data:
    external: true
  paperless_redis_data:
    external: true
