# Template: roles/docmost/templates/docker-compose.yml.j2

services:
  docmost:
    image: {{ docmost_image }}
    container_name: docmost
    depends_on:
      - db
      - redis
    env_file:
      - .env
    ports:
      - "{{ docmost_port }}:3000"
    restart: unless-stopped
    volumes:
      - docmost_data:/app/data/storage
    security_opt:
      - no-new-privileges:true
    deploy:
      resources:
        limits:
          memory: 1G
          cpus: '1.0'
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"

  db:
    image: {{ docmost_postgres_image }}
    container_name: docmost-db
    env_file:
      - .env
    restart: unless-stopped
    stop_grace_period: 60s
    volumes:
      - db_data:/var/lib/postgresql/data
    security_opt:
      - no-new-privileges:true
    deploy:
      resources:
        limits:
          memory: 512M
          cpus: '0.5'
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"

  redis:
    image: {{ docmost_redis_image }}
    container_name: docmost-redis
    restart: unless-stopped
    stop_grace_period: 30s
    volumes:
      - redis_data:/data
    security_opt:
      - no-new-privileges:true
    deploy:
      resources:
        limits:
          memory: 256M
          cpus: '0.5'
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"

volumes:
  docmost_data:
    external: true
    name: docmost_docmost_data
  db_data:
    external: true
    name: docmost_db_data
  redis_data:
    external: true
    name: docmost_redis_data
