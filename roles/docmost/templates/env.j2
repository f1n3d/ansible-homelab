# Managed by Ansible - Änderungen werden überschrieben!
# Template: roles/docmost/templates/env.j2

# === APP CONFIGURATION ===
APP_URL={{ docmost_app_url }}
APP_SECRET={{ docmost_app_secret }}

# === JWT ===
JWT_TOKEN_EXPIRES_IN={{ docmost_jwt_expires_in }}

# === DATABASE ===
POSTGRES_DB={{ docmost_postgres_db }}
POSTGRES_USER={{ docmost_postgres_user }}
POSTGRES_PASSWORD={{ docmost_postgres_password }}
DATABASE_URL=postgresql://{{ docmost_postgres_user }}:{{ docmost_postgres_password }}@db:5432/{{ docmost_postgres_db }}?schema=public

# === REDIS ===
REDIS_URL={{ docmost_redis_url }}

# === STORAGE ===
STORAGE_DRIVER={{ docmost_storage_driver }}
FILE_UPLOAD_SIZE_LIMIT={{ docmost_file_upload_size_limit }}

# === MAIL ===
MAIL_DRIVER={{ docmost_mail_driver }}
MAIL_FROM_ADDRESS={{ docmost_mail_from_address }}
MAIL_FROM_NAME={{ docmost_mail_from_name }}
SMTP_HOST={{ docmost_smtp_host }}
SMTP_PORT={{ docmost_smtp_port }}
SMTP_USERNAME={{ docmost_smtp_username }}
SMTP_PASSWORD={{ docmost_smtp_password }}
SMTP_SECURE={{ docmost_smtp_secure }}

# === INTEGRATIONS ===
DRAWIO_URL={{ docmost_drawio_url }}

# === TELEMETRY ===
DISABLE_TELEMETRY={{ docmost_disable_telemetry }}
